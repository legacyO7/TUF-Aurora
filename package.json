{
    "name": "tuf-aurora",
    "displayName": "Aurora",
    "productName": "Aurora",
    "version": "2.0.2",
    "description": "TUF Keyboard & Battery Manager Based On Faustus Mod",
    "main": "main.js",
    "scripts": {
        "test": "test",
        "start": "export ELECTRON_ENABLE_LOGGING=1 && electron .",
        "clean-build": "rm -rf ./dist",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --publish=never"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/legacyO7/TUF-Aurora.git"
    },
    "dependencies": {
        "@nathanielks/electron-sudo": "^4.0.15",
        "@nexssp/os": "^2.0.30",
        "electron-packager": "^15.5.1",
        "electron-reload": "^2.0.0-alpha.1",
        "rangeslider.js": "^2.3.3",
        "reinvented-color-wheel": "^0.4.0",
        "untildify": "^4.0.0"
    },
    "devDependencies": {
        "electron": "^20.0.0",
        "electron-builder": "^23.6.0"
    },
    "keywords": [
        "aurora",
        "tuf",
        "battery manager",
        "rgb lighting control",
        "linux",
        "asus"
    ],
    "author": "legacyO7 <anitsebastian802@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/legacyO7/TUF-Aurora/issues"
    },
    "homepage": "https://github.com/legacyO7/TUF-Aurora#readme",
    "build": {
        "appId": "com.legacy07.aurora",
        "extraFiles": [
            "src/shell",
            "icon.png",
            "setup_minimal.sh"
        ],
        "directories": {
            "buildResources": "build",
            "output": "dist"
        },
        "linux": {
            "category": "Utility",
            "target": ["AppImage", "deb", "rpm"]
        },
        "files": [
            "**/*",
            "images/*",
            "build/*"
        ]
    }
}